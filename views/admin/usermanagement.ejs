<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
         <link rel="stylesheet" href="/admin/css/style.css">
    </head>
<body>
    <%- include('../../partials/admin/header.ejs')%>

    <section id="mid">
        <div class="container">
            <div class="row">
                <%- include('../../partials/admin/left.ejs')%>
                <div class="col-md-9">
                    <h2>User Management</h2>
                    <h4><%=message%></h4>
                    <table class="table table-hover">
                        <tr>
                            <th>S.NO.</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Mobile</th>
                            <th>Creation Date</th>
                            <th>Delete</th>
                            <th>Status</th>
                        </tr>
                        <%record.forEach((result,key)=>{%>
                            <tr>
                                <td><%=key+1%></td>
                                <td><%=result.email%></td>
                                <%if(result.role=='free'){%>  
                                <td><a href="/admin/role/<%=result.id%>"><button class="btn btn-info b1"><%=result.role%></button></a></td>
                                <%}else{%>
                                <td><a href="/admin/role/<%=result.id%>"><button class="btn btn-warning b1"><%=result.role%></button></a></td>
                                <%}%>
                                <td><%=result.mobile%></td>
                                <td><%=result.creationDate%></td>
                                <td><a href="/admin/deleteprofile/<%=result.id%>"><button class="btn btn-danger b1">Delete</button></a> </td>
                                <%if(result.status=='suspended'){%> 
                                <td><a href="/admin/status/<%=result.id%>"><button class="btn btn-primary b1"><%=result.status%></button></a></td>
                                <%}else{%>
                                <td><a href="/admin/status/<%=result.id%>"><button class="btn btn-dark b1"><%=result.status%></button></a></td>
                                <%}%>
                            
                                </tr>
                       <%})%>
                        
                    </table>
                </div>
            </div>
        </div>
    </section>

    <%- include('../../partials/admin/footer.ejs')%>    


</body>
</html>